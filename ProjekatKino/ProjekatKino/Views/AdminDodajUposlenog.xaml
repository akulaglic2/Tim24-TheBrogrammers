        <Button x:Name="dodajUposlenog" Content="Dodaj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="900,634,0,0" Width="109" BorderBrush="#FFF3ECEC" FontFamily="Cambria" FontSize="20" FontWeight="Bold" Background="#33FFFFFF"/>

